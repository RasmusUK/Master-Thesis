@page "/"

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-10">
    <MudText Typo="Typo.h3" Class="mb-6">Welcome to the Spot Quote App</MudText>
    <MudText Typo="Typo.h6" Class="mb-6">Made with the Event Sourcing Framework</MudText>

    <MudGrid GutterSize="3">
        <MudItem xs="12" sm="6" md="6">
            <MudPaper Class="p-4" Elevation="4">
                <MudNavLink Href="spot-quotes" Icon="@Icons.Material.Filled.Assignment">
                    <MudText Typo="Typo.h6">Spot Quotes</MudText>
                    <MudText>View and manage spot quotes</MudText>
                </MudNavLink>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="6">
            <MudPaper Class="p-4" Elevation="4">
                <MudNavLink Href="customers" Icon="@Icons.Material.Filled.Person">
                    <MudText Typo="Typo.h6">Customers</MudText>
                    <MudText>Manage your customers</MudText>
                </MudNavLink>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="6">
            <MudPaper Class="p-4" Elevation="4">
                <MudNavLink Href="events" Icon="@Icons.Material.Filled.Event">
                    <MudText Typo="Typo.h6">Events (Admin)</MudText>
                    <MudText>Browse and view events</MudText>
                </MudNavLink>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="6">
            <MudPaper Class="p-4" Elevation="4">
                <MudNavLink Href="entity-history" Icon="@Icons.Material.Filled.Bookmarks">
                    <MudText Typo="Typo.h6">Entity History (Admin)</MudText>
                    <MudText>View the full history of any entity</MudText>
                </MudNavLink>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="6">
            <MudPaper Class="p-4" Elevation="4">
                <MudNavLink Href="snapshots" Icon="@Icons.Material.Filled.Image">
                    <MudText Typo="Typo.h6">Snapshots (Admin)</MudText>
                    <MudText>Inspect entity snapshots</MudText>
                </MudNavLink>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="6">
            <MudPaper Class="p-4" Elevation="4">
                <MudNavLink Href="replay" Icon="@Icons.Material.Filled.Replay">
                    <MudText Typo="Typo.h6">Replay (Admin)</MudText>
                    <MudText>Replay events for debugging or recovery</MudText>
                </MudNavLink>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>