{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDb" : {
    "EventStore": {
      "ConnectionString" : "mongodb://mongodb:27017",
      "DatabaseName" : "EventStore"
    },
    "EntityStore": {
      "ConnectionString" : "mongodb://mongodb:27017", 
      "DatabaseName" : "EntityStore"
    },
    "DebugEntityStore": {
      "ConnectionString" : "mongodb://mongodb:27017",
      "DatabaseName" : "EntityStore_debug"
    },
    "PersonalDataStore": {
      "ConnectionString" : "mongodb://mongodb:27017",
      "DatabaseName" : "PersonalDataStore"
    },
    "ApiResponseStore": {
      "ConnectionString" : "mongodb://mongodb:27017",
      "DatabaseName" : "PersonalDataStore"
    }
  },
  "EventSourcing": {
    "EnableEventStore" : true,
    "EnableEntityStore" : true,
    "EnablePersonalDataStore" : true,
    "Snapshot": {
      "Enabled": true,
      "Trigger": {
        "Mode": "Either",
        "Frequency": "Week",
        "EventThreshold": 1000
      },
      "Retention": {
        "Strategy": "Count",
        "MaxCount": 20,
        "MaxAgeDays": 180
      }
    }
  }
}